@using L2PAPIClient.DataModel
@using Grp.L2PSite.MobileApp.Services
@{
    ViewData["Title"] = "View Discussion";
    L2PRole userRole = ViewData["userRole"] as L2PRole;
    L2PCourseInfoData course = ViewData["ChosenCourse"] as L2PCourseInfoData;
    List<L2PDiscussionItemElement> mainThread = ViewData["mainThread"] as List<L2PDiscussionItemElement>;
    L2PDiscussionItemElement headdiscussion = null;
    if (mainThread != null)
    {
        headdiscussion = mainThread.First();
    }

    List<L2PDiscussionItemElement> mainThreadReplies = ViewData["mainThreadReplies"] as List<L2PDiscussionItemElement>;
}
<nav>
    <div class="nav-wrapper white">
        <div class="col s12">
            <a asp-controller="MyCourses" asp-action="WhatsNew" asp-route-cId="@course.uniqueid" class="breadcrumb blue-text" style="font-size: 12px; margin-left: 10px;">@Tools.truncateString(course.courseTitle, 20)</a>
            <a asp-controller="MyCourses" asp-action="DiscussionForum" asp-route-cId="@course.uniqueid" class="breadcrumb blue-text" style="font-size: 12px">Discussion</a>
            <a href="#!" class="breadcrumb blue-text" style="font-size: 12px">View</a>
        </div>
    </div>
</nav>
<div class="row"></div>
<div class="row">
    <div class="col s12">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                @if (mainThread != null)
                {
                    <div class="row">
                        <div class="card-content white-text">
                            @if (!String.IsNullOrEmpty(headdiscussion.subject))
                            {
                                <span class="card-title">@headdiscussion.subject</span>
                            }

                            <p>
                                @if (!String.IsNullOrEmpty(headdiscussion.body))
                                {
                                    @Html.Raw(headdiscussion.body);
                                }
                            </p>
                        </div>
                        <div class="card-action">
                            <a asp-controller="L2P" asp-action="ReplyDiscussion" asp-route-cId="@course.uniqueid" asp-route-hId="@headdiscussion.selfId">Reply</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

