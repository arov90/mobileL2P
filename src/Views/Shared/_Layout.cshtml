@using Microsoft.AspNet.Http;
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="The mobile version of the RWTH Learning App (L2P).">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - L2P Mobile</title>

    <!-- Material Design icon font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <!-- Materialize CSS + Calendar -->
    <link type="text/css" rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/css/materialize.min.css" media="screen,projection" />
    <link rel='stylesheet' href='http://cdnjs.cloudflare.com/ajax/libs/fullcalendar/2.7.2/fullcalendar.min.css' />
    <link rel="stylesheet" href="~/css/site.css" /> 
    <!-- JQuery JS Plugin-->
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
   
</head>
<body>
    @if (Context.Session.GetString("CourseId") != null)
    {
        <ul id="coursesDropdown" class="dropdown-content width-200">
            <li><a asp-controller="MyCourse" asp-action="LearningMaterials" class="waves-effect waves-light">Learning Materials</a></li>
            <li><a asp-controller="MyCourse" asp-action="SharedDocuments" class="waves-effect waves-light">Shared Documents</a></li>
            <li><a asp-controller="MyCourse" asp-action="Hyperlinks" class="waves-effect waves-light">Hyperlinks</a></li>
            <li><a asp-controller="MyCourse" asp-action="Assignments" class="waves-effect waves-light">Assignments</a></li>
            <li><a asp-controller="MyCourse" asp-action="Announcement" class="waves-effect waves-light">Announcements</a></li>
            <li><a asp-controller="" asp-action="" class="waves-effect waves-light">Emails</a></li>
            <li><a asp-controller="" asp-action="" class="waves-effect waves-light">Discussion Forum</a></li>
            <li><a asp-controller="MyCourse" asp-action="MediaLibrary" class="waves-effect waves-light">Media Library</a></li>
            <li><a asp-controller="MyCourse" asp-action="Literature" class="waves-effect waves-light">Literarture</a></li>
        </ul>
    }
    <nav class="blue darken-3" role="navigation">
        <div class="nav-wrapper">
            <a href="#!" class="brand-logo margin-left-20">L2P Mobile</a>
            <a href="#" data-activates="mobile" class="button-collapse show-on-large"><i class="material-icons">menu</i></a>
            <ul class="right">
                <!-- Dropdown Trigger -->
                <li><a class="dropdown-button" href="#!"  data-constrainwidth="false" data-activates="coursesDropdown"><i class="material-icons right">more_vert</i></a></li>
            </ul>
            <ul class="side-nav" id="mobile">
                <li><a class="waves-effect waves-light" asp-controller="Home" asp-action="MyCourses">My Courses</a></li>
                <li><a class="waves-effect waves-light" asp-controller="Home" asp-action="Calendar">Calendar</a></li>
                <li><a class="waves-effect waves-light" asp-controller="Home" asp-action="About">About</a></li>
                <li class="divider"></li>
                @await Html.PartialAsync("_LoginPartial")
            </ul>
        </div>
    </nav>

    <main class="layout__content">
        <div class="page-container">
            @RenderBody()
        </div>
    </main>

    <!--Import jQuery before materialize.js-->
    <!--<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/js/materialize.min.js"></script>-->
    <script type="text/javascript" src='~/js/materialize.js'></script>
    <script type="text/javascript" src='http://momentjs.com/downloads/moment.js'></script>
    <script type="text/javascript" src='http://cdnjs.cloudflare.com/ajax/libs/fullcalendar/2.7.2/fullcalendar.min.js'></script>
    <script src="~/lib/system.js" type="text/javascript"></script>
    <script src="~/config.js" type="text/javascript"></script>
    <script>
        System.import("js/site").catch(console.log.bind(console));
    </script>

    <script>
        $(document).ready(function () {

            $(".dropdown-button").dropdown();

            $('.button-collapse').sideNav({
                menuWidth: 300, // Default is 240
                edge: 'left', // Choose the horizontal origin
                closeOnClick: true // Closes side-nav on <a> clicks, useful for Angular/Meteor
            }
            );

           
        })
    </script>

    @RenderSection("scripts", false)
</body>
</html>